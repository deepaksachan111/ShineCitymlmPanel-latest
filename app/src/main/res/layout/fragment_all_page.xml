<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/blue_background"
    android:orientation="vertical"
    tools:context="com.lucknow.deepaksachan.shinecity_mlmpanel.Activity.AllPageActivityFragment">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">

        <ImageView
            android:layout_gravity="center"
            android:src="@mipmap/logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout

            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="0dp">

            <RelativeLayout

                android:orientation="vertical"
                android:layout_marginRight="10dp"
                android:background="#ECC500"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="fill_parent">
            <RelativeLayout
                android:background="@drawable/highlight_item"
                android:id="@+id/rela_user_login"
               android:layout_width="fill_parent"
                android:layout_height="fill_parent">

                <ImageView

                    android:src="@mipmap/house"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:id="@+id/imageView2" />

                <TextView
                    android:layout_alignParentBottom="true"
                    android:textStyle="bold"
                    android:typeface="monospace"
                    android:textColor="#fff"
                    android:textSize="16sp"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="Dashboard"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" />

</RelativeLayout>
            </RelativeLayout>

            <LinearLayout
                android:background="#18A14F"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="fill_parent">

                <RelativeLayout
                    android:background="@drawable/highlight_item"
                    android:id="@+id/rela_project"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent">

                    <ImageView

                        android:src="@mipmap/parking"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true" />

                    <TextView
                        android:textSize="16sp"
                        android:layout_alignParentBottom="true"
                        android:textStyle="bold"
                        android:typeface="monospace"
                        android:textColor="#fff"
                android:gravity="center"
                        android:padding="5dp"
                        android:text="Project"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content" />


                </RelativeLayout>

            </LinearLayout>



        </LinearLayout>

