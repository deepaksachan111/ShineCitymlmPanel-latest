<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".MainActivity">

    <LinearLayout
        android:background="#1E90FF"
        android:id="@+id/back_iv_aboutus"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="40dp">
        <ImageView
            android:padding="5dp"
            android:src="@mipmap/enterpin"
            android:layout_gravity="center"
            android:layout_width="40dp"
            android:layout_height="40dp" />

        <TextView
            android:textStyle="bold"
            android:textColor="#fff"
            android:layout_gravity="center"
            android:text="Back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

<ScrollView
    android:layout_below="@+id/back_iv_aboutus"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:id="@+id/frameLayout">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <android.support.v7.widget.CardView

                    android:layout_weight="1"
                    android:id="@+id/card_view"
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    card_view:cardCornerRadius="10dp"
                    card_view:cardElevation="5dp"
                    card_view:cardBackgroundColor="#FF4343"
                    card_view:cardUseCompatPadding="true">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content">


                        <LinearLayout
                            android:padding="5dp"
                            android:orientation="horizontal"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content">

                            <FrameLayout
                                android:background="#F4762A"
                                android:layout_width="50dp"
                                android:layout_height="50dp">
                                <ImageView
                                    android:layout_gravity="center"
                                    android:src="@mipmap/home_icon"
                                    android:layout_width="30dp"
                                    android:layout_height="30dp" />

                                <LinearLayout
                                    android:layout_gravity="bottom"
                                    android:background="#DA6E2C"
                                    android:layout_width="fill_parent"
                                    android:layout_height="5dp">

                                </LinearLayout>

                            </FrameLayout>


                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                            <TextView
                                android:textColor="#fff"
                                android:padding="10dp"
                                android:layout_gravity="center"
                                android:textStyle="bold"
                                android:textSize="14sp"
                                android:text="About Company"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                            <View
                                android:layout_marginLeft="10dp"
                                android:background="#F4762A"
                                android:layout_width="fill_parent"
                                android:layout_height="1dp"/>

                            </LinearLayout>
                        </LinearLayout>



                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content">



                        <TextView
                            android:layout_gravity="center"
                            android:padding="10dp"
                            android:textColor="#fff"
                            android:text="@string/text_with_bullet"
                            android:textStyle="bold"
                            android:textSize="20sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:paddingBottom="10dp"
                            android:textColor="#fff"
                            android:text="@string/about_company"
                            android:textStyle="bold"
                            android:textSize="12sp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />
                        </LinearLayout>
                    </LinearLayout>



                </android.support.v7.widget.CardView>



            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <android.support.v7.widget.CardView

                    android:layout_weight="1"
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    card_view:cardCornerRadius="10dp"
                    card_view:cardElevation="5dp"
                    card_view:cardBackgroundColor="#33B4E4"
                    card_view:cardUseCompatPadding="true">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content">


                        <LinearLayout
                            android:padding="5dp"
                            android:orientation="horizontal"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content">

                            <FrameLayout
                                android:background="#F4762A"
                                android:layout_width="50dp"
                                android:layout_height="50dp">
                                <ImageView
                                    android:layout_gravity="center"
                                    android:src="@mipmap/home_icon"
                                    android:layout_width="30dp"
                                    android:layout_height="30dp" />

                                <LinearLayout
                                    android:layout_gravity="bottom"
                                    android:background="#DA6E2C"
                                    android:layout_width="fill_parent"
                                    android:layout_height="5dp">

                                </LinearLayout>

                            </FrameLayout>


                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:textColor="#fff"
                                    android:padding="10dp"
                                    android:layout_gravity="center"
                                    android:textStyle="bold"
                                    android:textSize="14sp"
                                    android:text="Mission Vision"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />
                                <View
                                    android:layout_marginLeft="10dp"
                                    android:background="#F4762A"
                                    android:layout_width="fill_parent"
                                    android:layout_height="1dp"/>

                            </LinearLayout>
                        </LinearLayout>



                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content">



                            <TextView
                                android:layout_gravity="center"
                                android:padding="10dp"
                                android:textColor="#fff"
                                android:text="@string/text_with_bullet"
                                android:textStyle="bold"
                                android:textSize="20sp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                            <TextView
                                android:paddingBottom="10dp"
                                android:textColor="#fff"
                                android:text="@string/mission_vission"
                                android:textStyle="bold"
                                android:textSize="12sp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                        </LinearLayout>
                    </LinearLayout>



                </android.support.v7.widget.CardView>



            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <android.support.v7.widget.CardView

                    android:layout_weight="1"
                    xmlns:card_view="http://schemas.android.com/apk/res-auto"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    card_view:cardCornerRadius="10dp"
                    card_view:cardElevation="5dp"
                    card_view:cardBackgroundColor="#A966CC"
                    card_view:cardUseCompatPadding="true">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content">


                        <LinearLayout
                            android:padding="5dp"
                            android:orientation="horizontal"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content">

                            <FrameLayout
                                android:background="#F4762A"
                                android:layout_width="50dp"
                                android:layout_height="50dp">
                                <ImageView
                                    android:layout_gravity="center"
                                    android:src="@mipmap/home_icon"
                                    android:layout_width="30dp"
                                    android:layout_height="30dp" />

                                <LinearLayout
                                    android:layout_gravity="bottom"
                                    android:background="#DA6E2C"
                                    android:layout_width="fill_parent"
                                    android:layout_height="5dp">

                                </LinearLayout>

                            </FrameLayout>


                            <LinearLayout
                                android:orientation="vertical"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">
                                <TextView
                                    android:textColor="#fff"
                                    android:padding="10dp"
                                    android:layout_gravity="center"
                                    android:textStyle="bold"
                                    android:textSize="14sp"
                                    android:text="CEO Message"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />
                                <View
                                    android:layout_marginLeft="10dp"
                                    android:background="#F4762A"
                                    android:layout_width="fill_parent"
                                    android:layout_height="1dp"/>

                            </LinearLayout>
                        </LinearLayout>



                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content">



                            <TextView
                                android:layout_gravity="center"
                                android:padding="10dp"
                                android:textColor="#fff"
                                android:text="@string/text_with_bullet"
                                android:textStyle="bold"
                                android:textSize="20sp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                            <TextView
                                android:paddingBottom="10dp"
                                android:textColor="#fff"
                                android:text="@string/ceo_message"
                                android:textStyle="bold"
                                android:textSize="12sp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                        </LinearLayout>
                    </LinearLayout>



                </android.support.v7.widget.CardView>



            </LinearLayout>

        </LinearLayout>



  <!--      <ImageButton
            android:layout_margin="15dp"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/ambilwarna_arrow_right"
            android:background="@drawable/circle_shape"
            android:id="@+id/imageButton_back"
            android:layout_gravity="right|bottom" />-->


    </FrameLayout>
</ScrollView>
</RelativeLayout>