<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B2DFDB"
    android:orientation="vertical" >

    <TextView
        android:textSize="30dp"
        android:textColor="@color/red"
        android:layout_marginTop="50dp"
         android:typeface="serif"
        android:textStyle="bold"
        android:id="@+id/textView1"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="Card Details"
       />
    <ImageView
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:src="@drawable/excelcard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_marginTop="20dp"
        android:padding="5dp"
        android:gravity="center"
        android:id="@+id/tv_carddetail_cardno"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:text="Card No."
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:padding="5dp"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:text="Tolal Value"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:textColor="@color/blue"
        android:padding="5dp"
        android:gravity="center"
        android:textStyle="bold"
        android:id="@+id/tv_carddetail_totalvalue"
        android:text="Tolal Value"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:padding="5dp"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:text="Used Value"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:textColor="@color/blue"
        android:padding="5dp"
        android:gravity="center"
        android:textStyle="bold"
        android:id="@+id/tv_carddetail_usedvalue"
        android:text="Used Value"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:padding="5dp"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:text="Balance Value"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:textColor="@color/blue"
        android:gravity="center"
        android:textStyle="bold"
        android:id="@+id/tv_carddetail_balancevalue"
        android:text="Balance Value"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

    <ImageView
       android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:background="@drawable/giftcard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:autoLink="web|email"
        android:linksClickable="true"
        android:id="@+id/tv_mlmpanelshicity"
        android:textColor="@color/red"
        android:text="shinecityinfra"
        android:textSize="24sp"
        android:padding="20dp"
        android:layout_marginLeft="20dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />

 </LinearLayout>