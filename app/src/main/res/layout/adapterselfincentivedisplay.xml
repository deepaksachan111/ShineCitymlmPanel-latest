<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:padding="5dp"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="@color/black"
            android:id="@+id/tv_selfincentive_fromid"
            android:text="From ID"
            android:layout_weight=".7"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <TextView
            android:textColor="@color/black"
            android:id="@+id/tv_selfincentive_membername"
            android:text="Member"
            android:layout_weight=".7"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <TextView
            android:textColor="@color/black"
            android:id="@+id/tv_selfincentive_currentdate"
            android:text="CurrDate"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

        <TextView
            android:textColor="@color/black"
            android:id="@+id/tv_selfincentive_closedate"
            android:text="closDate"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <TextView
            android:textColor="@color/black"
            android:layout_marginLeft="5dp"
            android:id="@+id/tv_selfincentive_payoutno"
            android:text="Payout No"
            android:layout_weight=".4"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_weight=".4"
            android:textColor="@color/black"
            android:gravity="right"
            android:id="@+id/tv_selfincentive_amount"
            android:text="Amount"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
    </LinearLayout>
<LinearLayout
    android:background="@drawable/line_complete"
    android:layout_width="fill_parent"
    android:layout_height="1dp"></LinearLayout>
</LinearLayout>