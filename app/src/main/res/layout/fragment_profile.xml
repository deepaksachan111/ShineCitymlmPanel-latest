                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" />

                    <!--    <TextView
                            android:textColor="@color/white"
                            android:layout_marginLeft="10dp"
                            android:text="PayDetail"
                            android:layout_weight="1.4"
