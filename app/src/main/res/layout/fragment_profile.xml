                        android:textColor="#000000" />


                    <TextView
                        android:id="@+id/nominee_mobile_tv"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="6"
                        android:text=""
                        android:textColor="#000000" />

                </LinearLayout>
            </LinearLayout>


