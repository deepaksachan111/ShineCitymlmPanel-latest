<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context="com.lucknow.deepaksachan.shinecity_mlmpanel.OtpSetPasswordFragment">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20sp"
        android:orientation="vertical">

        <EditText
            android:padding="10dp"
            android:background="@drawable/recta_edittext"
            android:fontFamily="serif"
            android:inputType="textPassword"
            android:maxLength="10"
            android:id="@+id/edt_newpass"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="Enter New PassWord"
            android:imeOptions="actionNext"
            android:singleLine="true"/>
        <EditText
            android:padding="10dp"
            android:background="@drawable/recta_edittext"
            android:fontFamily="serif"
            android:inputType="textPassword"
            android:maxLength="10"
            android:id="@+id/edt_confirmpass"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:hint="Enter Confirm PassWord"
            android:imeOptions="actionDone"
            android:singleLine="true"/>

        <Button
            android:id="@+id/otp_set_pass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:background="@color/black"
            android:text="Submit"
            android:textColor="@color/white"
            android:typeface="sans" />


    </LinearLayout>


</FrameLayout>
