<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.lucknow.deepaksachan.shinecity_mlmpanel.AgentPlotReportFragment">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <LinearLayout
            android:padding="16dp"
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:textStyle="bold"
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:text="Payment Type" />
                <LinearLayout
                    android:layout_weight="1"
                    android:background="@drawable/recta_edittext"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                    <Spinner
                        android:layout_weight="1"
                        android:ellipsize="marquee"
                        android:id="@+id/spi_paymenttype"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:id="@+id/linearLayout1"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:text="Payment Mode" />
                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/recta_edittext"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                    <Spinner
                        android:layout_weight="1"
                        android:ellipsize="marquee"
                        android:id="@+id/spi_paymentmode"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:text="E-PinNo." />
                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"

                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                    <EditText
                        android:inputType="text"
                        android:padding="10dp"
                        android:textSize="16dp"
                        android:background="@drawable/recta_edittext"
                        android:hint="enter epinno"
                        android:layout_weight="1"
                        android:id="@+id/edt_epinno"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:textStyle="bold"
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:text="ChequeNo." />
                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/recta_edittext"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                    <EditText
                        android:inputType="text"
                        android:padding="10dp"
                        android:textSize="16dp"
                        android:background="@drawable/recta_edittext"
                        android:hint="enter chequeno"
                        android:layout_weight="1"
                        android:id="@+id/edt_chequeno"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>
            <FrameLayout
                android:layout_marginTop="5dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:focusableInTouchMode="false"
                    android:id="@+id/edt_ajentplotfromdate"
                    android:padding="10dp"
                    android:hint="Join Form "
                    android:background="@drawable/recta_edittext"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center_vertical" />

                <ImageView
                    android:layout_marginRight="10dp"
                    android:src="@drawable/claender2"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_gravity="right|center_vertical" />
            </FrameLayout>
            <FrameLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:focusableInTouchMode="false"
                    android:id="@+id/edt_ajentplottodate"
                    android:layout_marginTop="20dp"
                    android:padding="10dp"
                    android:hint="Join To "
                    android:background="@drawable/recta_edittext"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:paddingBottom="3dp"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/claender2"
                    android:layout_width="40dp"
                    android:layout_height="42dp"
                    android:layout_gravity="right|bottom" />
            </FrameLayout>

            <RadioGroup
                android:layout_marginTop="5dp"
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:id="@+id/myRadioGroup">

                <RadioButton
                    android:checked="true"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/radio_dwonline"
                    android:text="Downline" />

                <RadioButton
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/radio_self"
                    android:text="Self" />

            </RadioGroup>

            <Button
                android:id="@+id/btn_getagentdetails"
                android:text="Get Details"
                android:textColor="@color/white"
                android:background="@color/black"
                android:layout_marginTop="20dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
