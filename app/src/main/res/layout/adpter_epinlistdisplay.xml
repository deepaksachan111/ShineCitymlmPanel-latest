<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:padding="10dp"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_epin_createdby"
            android:text="Cre.Date"
            android:layout_weight=".7"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_epin_epinno"
            android:text="ePinNo"
            android:layout_weight=".7"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_epin_owner"
            android:text="Owner"
            android:layout_weight=".9"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <TextView
            android:typeface="serif"
            android:textStyle="bold"
            android:id="@+id/tv_newregistration"
            android:text="Register Now"
            android:textColor="@color/actionbarthemecolor"
            android:layout_weight=".7"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginLeft="20dp"
            android:gravity="right"
            android:id="@+id/tv_epin_status"
            android:text="Status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>
</LinearLayout>