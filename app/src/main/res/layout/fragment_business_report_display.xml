<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    android:orientation="vertical"
    tools:context="com.lucknow.deepaksachan.shinecity_mlmpanel.BusinessReportDisplayFragment">


     <TextView
         android:textStyle="bold"
         android:textSize="18dp"
         android:id="@+id/tv_oldtopupdetails"
         android:background="@color/blue"
         android:padding="10dp"
         android:textColor="@color/white"
         android:text="Old Topup Details   (Click here)"
         android:layout_width="fill_parent"
         android:layout_height="wrap_content" />

 <LinearLayout
      android:visibility="gone"
     android:orientation="vertical"
     android:id="@+id/linear_oldtopupdetails"
     android:layout_width="fill_parent"
     android:layout_height="wrap_content">
<LinearLayout
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">
    <TextView
        android:textColor="@color/black"
        android:text="Note : Status  "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:textColor="@color/purple"
        android:text="Pending = P, "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:textColor="@color/green"
        android:text="Confirmed = C, "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:textColor="@color/red"
        android:text="Blocked = B "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</LinearLayout>
<LinearLayout
    android:padding="5dp"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    android:background="@color/black"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="@color/white"
            android:textStyle="bold"
            android:text="Date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_weight="1.20"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="@color/white"
            android:textStyle="bold"
            android:text="M.Name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="@color/white"
            android:textStyle="bold"
            android:text="M.ID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_weight=".80"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="@color/white"
            android:textStyle="bold"
            android:text="PmtType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_weight=".80"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="@color/white"
            android:textStyle="bold"
            android:text="Mode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <LinearLayout
    android:layout_marginTop="10dp"
    android:layout_weight=".80"
    android:orientation="vertical"
    android:layout_width="0dp"
    android:layout_height="wrap_content">
    <TextView
        android:textColor="@color/white"
        android:textStyle="bold"
        android:text="Amt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_weight=".40"
        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_gravity="right"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:text="Status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>
</LinearLayout>

    <ListView
        android:id="@+id/listview_old_popupdetails"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
    </ListView>
     <LinearLayout
         android:background="@drawable/line_complete"
         android:layout_width="fill_parent"
         android:layout_height="wrap_content"></LinearLayout>
 </LinearLayout>

 <TextView
    android:layout_marginTop="20dp"
     android:textStyle="bold"
     android:textSize="18dp"
     android:id="@+id/tv_newtopupdetails"
     android:background="@color/blue"
     android:padding="10dp"
     android:textColor="@color/white"
     android:text="New Topup Details   (Click here)"
     android:layout_width="fill_parent"
     android:layout_height="wrap_content"  />
    <LinearLayout
        android:visibility="gone"
        android:id="@+id/linear_newtopupdetails"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="@color/black"
                android:text="Note : Status  "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:textColor="@color/purple"
                android:text="Pending = P, "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:textColor="@color/green"
                android:text="Confirmed = C, "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:textColor="@color/red"
                android:text="Blocked = B "
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:padding="5dp"
            android:background="@color/black"
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

                <TextView

                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:text="Date"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />


                <TextView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:text="Cust.ID"
                    android:layout_height="wrap_content" />
                <TextView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:text="AgentID"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:text="PayType"
                    android:layout_height="wrap_content" />


                <TextView
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:text="Mode"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
            <TextView
                android:textColor="@color/white"
                android:textStyle="bold"
                android:text="Site"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <TextView
                android:textColor="@color/white"
                android:textStyle="bold"
                android:text="Plot"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

                <TextView
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:text="Amt"
                    android:layout_weight="1"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />

                <TextView
                    android:gravity="right"
                    android:textColor="@color/white"
                    android:textStyle="bold"
                    android:text="Sts"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

        </LinearLayout>

        <ListView
            android:id="@+id/listview_new_popupdetails"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
        </ListView>

        <TextView
            android:id="@+id/tv_business_norecordfound"
            android:textSize="30sp"
            android:textColor="@color/red"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

 </LinearLayout>


