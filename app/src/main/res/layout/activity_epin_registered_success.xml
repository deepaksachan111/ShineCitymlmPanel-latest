<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:padding="5dp"
    tools:context="com.quaere.deepak.quaereshinecity.RedeemSuccessActivity">


    <ImageView
        android:id="@+id/tik"
        android:layout_gravity="center"
        android:src="@drawable/tik"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <LinearLayout
        android:layout_marginTop="15dp"
        android:layout_below="@+id/tik"
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="@color/green"
            android:layout_gravity="center"
            android:text="Member has been registered successfully"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


        <Button
            android:id="@+id/btn_view_finish"
            android:textStyle="bold"
            android:fontFamily="cursive"
            android:layout_marginTop="10dp"
            android:text="Finish"
            android:textColor="@color/white"
            android:background="@color/red"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/btn_view_detail"
            android:textStyle="bold"
            android:fontFamily="cursive"
            android:layout_marginTop="10dp"
            android:text="View Detail"
            android:textColor="@color/white"
            android:background="@color/red"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:visibility="gone"
            android:padding="10dp"
            android:orientation="vertical"
            android:id="@+id/linear_view_detail"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <TextView

                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:text="Agent Name :"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tv_registername"
                    android:layout_weight="1"
                    android:textColor="@color/green"
                    android:text="Login "
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <TextView

                android:layout_weight="1"
                android:textColor="@color/black"
                android:text="Login ID :"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_registerid"
                android:layout_weight="1"
                android:textColor="@color/green"
                android:text="Login "
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
        </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content">
                <TextView

                    android:layout_weight="1"
                    android:textColor="@color/black"
                    android:text="Password :"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/tv_registerpass"
                    android:layout_weight="1"
                    android:textColor="@color/green"
                    android:text="Password "
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>
</RelativeLayout>
