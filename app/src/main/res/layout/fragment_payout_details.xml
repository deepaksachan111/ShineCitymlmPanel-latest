<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.lucknow.deepaksachan.shinecity_mlmpanel.PayoutDetailsFragment">

    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical">
        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <EditText
                android:focusableInTouchMode="false"
                android:id="@+id/edt_fromdatepayoutdetails"
                android:padding="10dp"
                android:hint="Form Date "
                android:background="@drawable/recta_edittext"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="right|center_vertical" />

            <ImageView
                android:padding="5dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/claender2"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="right|center_vertical" />
        </FrameLayout>
        <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
            <EditText
                android:focusableInTouchMode="false"
                android:id="@+id/edt_todatepayoutdetails"
                android:layout_marginTop="20dp"
                android:padding="10dp"
                android:hint="To Date "
                android:background="@drawable/recta_edittext"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" />

            <ImageView
                android:padding="5dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/claender2"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="right|bottom" />
        </FrameLayout>

        <Button
            android:id="@+id/btn_getdetails_payoutdetails"
            android:text="Get Details"
            android:textColor="@color/white"
            android:background="@color/black"
            android:layout_marginTop="20dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />
    </LinearLayout>

</RelativeLayout>
