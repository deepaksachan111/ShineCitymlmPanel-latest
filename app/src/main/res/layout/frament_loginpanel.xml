<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="@drawable/layout_bg"
    tools:context="com.lucknow.deepaksachan.shinecity_mlmpanel.LoginPanelFragment">

    <RelativeLayout
        android:layout_marginTop="30dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:src="@drawable/logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|top"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>

    <LinearLayout
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="200dp">

        <FrameLayout
            android:id="@+id/tpanellogin"
            android:background="@drawable/leftcornerborder"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">



            <ImageView
                android:padding="10dp"

                android:src="@drawable/traditionalpanel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imageView"
                android:layout_gravity="right|bottom" />

            <TextView
                android:textStyle="bold"
                android:textColor="@color/white"
                android:fontFamily="serif"
                android:text="T Panel"
                android:textSize="24sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|top" />
        </FrameLayout>

        <FrameLayout
            android:id="@+id/mlmpanellogin"
            android:background="@drawable/right_cornerborder"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:padding="10dp"
                android:src="@drawable/mlmpanelimg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/linearLayout"
                android:layout_toEndOf="@+id/linearLayout" />

            <TextView
                android:textStyle="bold"
                android:textColor="@color/white"
                android:fontFamily="serif"
                android:text="MLM Panel"
                android:textSize="24sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|top" />
        </FrameLayout>
    </LinearLayout>
