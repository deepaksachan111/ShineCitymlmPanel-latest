<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:orientation="vertical" android:layout_width="match_parent"
android:layout_height="match_parent"
    android:padding="12dp">
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
<LinearLayout
    android:padding="16dp"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                   android:gravity="center_vertical"
                    android:textStyle="bold"
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:text="Business of" />
                <LinearLayout
                    android:layout_weight="1"
                    android:background="@drawable/recta_edittext"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content">
                <Spinner
                    android:layout_weight="1"
                    android:ellipsize="marquee"
                    android:id="@+id/business_of"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
                </LinearLayout>
            </LinearLayout>


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:id="@+id/linearLayout1"
            android:layout_height="wrap_content">

            <TextView
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:text="Status" />
            <LinearLayout
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:background="@drawable/recta_edittext"
                android:layout_width="0dp"
                android:layout_height="wrap_content">
            <Spinner
                android:layout_weight="1"
                android:ellipsize="marquee"
                android:id="@+id/busi_payment_status"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
                </LinearLayout>
        </LinearLayout>
    <LinearLayout
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:text="Payment Type" />
        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:background="@drawable/recta_edittext"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
        <Spinner
            android:layout_weight="1"
            android:ellipsize="marquee"
            android:id="@+id/payment_type"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
            </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="5dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:layout_gravity="center"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:layout_width="0dp"
            android:text="Payment Proceed" />
        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:background="@drawable/recta_edittext"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
        <Spinner
            android:layout_weight="1"
            android:ellipsize="marquee"
            android:id="@+id/payout_proceed"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
            </LinearLayout>
    </LinearLayout>
    <FrameLayout
        android:layout_marginTop="5dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <EditText
            android:focusableInTouchMode="false"
            android:id="@+id/edt_businessfromdate"
            android:padding="10dp"
            android:hint="Join Form "
            android:background="@drawable/recta_edittext"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center_vertical" />
        <ImageView
            android:layout_marginRight="10dp"
            android:src="@drawable/claender2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="right|center_vertical" />
    </FrameLayout>

    <FrameLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <EditText
            android:focusableInTouchMode="false"
            android:id="@+id/edt_businesstodate"
            android:layout_marginTop="20dp"
            android:padding="10dp"
            android:hint="Join To "
            android:background="@drawable/recta_edittext"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" />

        <ImageView
            android:paddingBottom="3dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/claender2"
            android:layout_width="40dp"
            android:layout_height="42dp"
            android:layout_gravity="right|bottom" />
    </FrameLayout>
    <Button
        android:id="@+id/btn_getbusinessreports"
        android:text="Get Reports"
        android:textColor="@color/white"
        android:background="@color/black"
        android:layout_marginTop="20dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />
</LinearLayout>
