<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.lucknow.deepaksachan.shinecity_mlmpanel.EPinRegistrationActivity">
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:fillViewport="true"
        android:fadeScrollbars="false"
        android:scrollbars="vertical">
  <LinearLayout
      android:orientation="vertical"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content">
      <TextView
          android:padding="5dp"
          android:text="Joining Information"
          android:textSize="18sp"
          android:textColor="@color/black"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content" />
      <LinearLayout
          android:padding="5dp"
          android:orientation="horizontal"
          android:layout_width="fill_parent"
          android:layout_height="wrap_content">
          <TextView
              android:layout_marginTop="5dp"
              android:layout_weight="1"
              android:text="e-PinCode"
              android:layout_width="0dp"
              android:layout_height="wrap_content" />
          <LinearLayout
              android:layout_weight="1.5"
              android:layout_width="0dp"
              android:layout_height="wrap_content">

          <EditText
              android:padding="5dp"
              android:id="@+id/et_epincode"
              android:background="@drawable/recta_edittext"
              android:layout_weight="1.5"
              android:layout_width="0dp"
              android:layout_height="wrap_content" />
              <TextView
                  android:padding="2dp"
                  android:id="@+id/tv_valid"
                  android:textColor="@color/green"
                  android:layout_weight=".3"
                  android:layout_width="0dp"
                  android:layout_height="wrap_content" />
          </LinearLayout>
      </LinearLayout>
      <LinearLayout
          android:padding="5dp"
          android:orientation="horizontal"
          android:layout_width="fill_parent"
          android:layout_height="wrap_content">
          <TextView
              android:layout_weight="1"
              android:text="Refer By"
              android:layout_width="0dp"
              android:layout_height="wrap_content" />
          <EditText
              android:padding="5dp"
              android:id="@+id/et_epinreferby"
              android:background="@drawable/recta_edittext"
              android:layout_weight="1.5"
              android:layout_width="0dp"
              android:layout_height="wrap_content" />

      </LinearLayout>
      <LinearLayout
          android:orientation="horizontal"
          android:layout_width="fill_parent"
          android:layout_height="wrap_content">

      <TextView
          android:layout_weight="1"
          android:text="Joining Leg"
          android:layout_width="0dp"
          android:layout_height="wrap_content" />
      <RadioGroup
          android:layout_weight="1"
          android:orientation="horizontal"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:id="@+id/myRadioGroup_newRegi">

          <RadioButton
              android:layout_weight=".5"
              android:checked="true"
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:id="@+id/radio_epinregistration"
              android:text="Left" />

          <RadioButton
              android:layout_weight=".5"
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:id="@+id/radio_self"
              android:text="Right" />

      </RadioGroup>
      </LinearLayout>
      <LinearLayout
          android:padding="5dp"
          android:orientation="horizontal"
          android:layout_width="fill_parent"
          android:layout_height="wrap_content">
          <TextView
              android:paddingTop="5dp"
              android:layout_marginTop="5dp"
              android:layout_weight="1"
              android:text="Parent ID"
              android:layout_width="0dp"
              android:layout_height="wrap_content" />
          <LinearLayout
              android:orientation="horizontal"
              android:layout_weight="1.5"
              android:layout_width="0dp"
              android:layout_height="wrap_content">
          <TextView
              android:textStyle="bold"
              android:textColor="@color/black"
              android:id="@+id/tv_parent_id_new_reg"
              android:padding="5dp"
              android:layout_width="wrap_content"
              android:text="id"
              android:layout_height="wrap_content" />
          <TextView
              android:textStyle="bold"
              android:textColor="@color/black"
              android:id="@+id/tv_parent_name_new_reg"
              android:text="name"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content" />
          </LinearLayout>
      </LinearLayout>
      <TextView
          android:padding="5dp"
          android:text="Personal Details"
          android:textSize="18sp"
          android:textColor="@color/black"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content" />

      <LinearLayout
          android:padding="5dp"
          android:orientation="horizontal"
          android:layout_width="fill_parent"
          android:layout_height="wrap_content">
          <TextView
              android:layout_weight="1"
              android:text="First Name"
              android:layout_width="0dp"
              android:layout_height="wrap_content" />
          <Spinner
              android:layout_weight=".3"
              android:id="@+id/spi_name_new_regi"
              android:layout_width="0dp"
              android:layout_height="wrap_content" />
          <EditText
              android:id="@+id/edt_name_newreg"
              android:padding="5dp"
              android:background="@drawable/recta_edittext"
              android:layout_weight="1.2"
              android:layout_width="0dp"
              android:layout_height="wrap_content" />
      </LinearLayout>
      <LinearLayout
          android:padding="5dp"
          android:orientation="horizontal"
          android:layout_width="fill_parent"
          android:layout_height="wrap_content">
          <TextView
              android:layout_weight="1"
              android:text="Gender"
              android:layout_width="0dp"
              android:layout_height="wrap_content" />
          <Spinner
              android:id="@+id/spi_gender_new_regis"
              android:layout_weight="1.5"
              android:layout_width="0dp"
              android:layout_height="wrap_content" />
      </LinearLayout>

      <LinearLayout
          android:padding="5dp"
          android:orientation="horizontal"
          android:layout_width="fill_parent"
          android:layout_height="wrap_content">
          <TextView
              android:layout_weight="1"
              android:text="Mobile"
              android:layout_width="0dp"
              android:layout_height="wrap_content" />
          <EditText
              android:maxLength="10"
              android:inputType="number"
              android:id="@+id/edt_mobileno_newreg"
              android:padding="5dp"
              android:background="@drawable/recta_edittext"
              android:layout_weight="1.5"
              android:layout_width="0dp"
              android:layout_height="wrap_content" />
      </LinearLayout>

      <LinearLayout
          android:padding="5dp"
          android:orientation="horizontal"
          android:layout_width="fill_parent"
          android:layout_height="wrap_content">
          <TextView
              android:layout_weight="1"
              android:text="Pan No"
              android:layout_width="0dp"
              android:layout_height="wrap_content" />
          <EditText
              android:id="@+id/edt_panno_newreg"
              android:padding="5dp"
              android:background="@drawable/recta_edittext"
              android:layout_weight="1.5"
              android:layout_width="0dp"
              android:layout_height="wrap_content" />
      </LinearLayout>

      <LinearLayout
          android:gravity="center"
          android:padding="5dp"
          android:orientation="horizontal"
          android:layout_width="fill_parent"
          android:layout_height="wrap_content">
          <Button
              android:id="@+id/btn_save_newreg"
              android:text="Save"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content" />
          <Button
              android:id="@+id/btn_reset_newreg"
              android:text="Reset"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content" />
      </LinearLayout>
  </LinearLayout>
</ScrollView>
</RelativeLayout>
